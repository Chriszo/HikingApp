<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/sight_item">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="5dp"
        android:src="@mipmap/olympus_foreground"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/sight_name"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="none"
        android:singleLine="false"
        android:text="TextView"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/sight_description"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/sight_name"
        app:layout_constraintTop_toBottomOf="@+id/sight_name"
        android:layout_marginBottom="5dp"
        android:textSize="13sp"
        android:text="TextView"
        android:ellipsize="none"
        android:singleLine="false"
        />

    <RatingBar
        android:id="@+id/routeRating"
        android:layout_width="233dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@id/sight_name"
        app:layout_constraintTop_toTopOf="@id/sight_name"
        android:layout_marginStart="100dp"
        android:numStars="5"
        android:rating="3"
        android:scaleX="0.3"
        android:scaleY="0.3"
        android:theme="@style/MiniRatingBar"
        android:transformPivotX="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"/>

</androidx.constraintlayout.widget.ConstraintLayout>