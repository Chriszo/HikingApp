<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">

    <include layout="@layout/custom_toolbar" android:id="@+id/toolbarContainer"/>


    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarContainer"/>

    <com.mapbox.navigation.ui.maps.camera.view.MapboxRecenterButton
        android:id="@+id/startNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/current_user_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/custom_location_search_icon"
        android:contentDescription="Current Location button"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/startNavigation"
        android:layout_marginTop="5dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/show_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/map_icon_foreground"
        android:contentDescription="Current Location button"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/current_user_location"
        android:layout_marginTop="5dp"
        android:visibility="gone"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/switchMapStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/map_styles_icon_foreground"
        android:contentDescription="@string/switch_map_style"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/show_route"
        android:layout_marginTop="5dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mapStyle_options"
        app:layout_constraintTop_toBottomOf="@id/switchMapStyle"
        app:layout_constraintEnd_toEndOf="@id/switchMapStyle"
        android:layout_width="45dp"
        android:layout_height="180dp"
        android:layout_marginEnd="7dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/traffic_map_style"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/traffic_map_style"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/traffic_map_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:text="Traffic"
                android:textSize="8sp"/>


            <ImageView
                android:id="@+id/satellite_map_style"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/satellite_map_style"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>


            <TextView
                android:id="@+id/satellite_map_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:text="Satellite"
                android:textSize="8sp"/>

            <ImageView
                android:id="@+id/terrain_map_style"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/terain_map_style"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>


            <TextView
                android:id="@+id/terrain_map_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:text="Terrain"
                android:textSize="8sp"/>

        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>